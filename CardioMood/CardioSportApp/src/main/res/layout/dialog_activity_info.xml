<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:paddingLeft="2pt" android:paddingBottom="4pt"
              android:paddingTop="2pt" android:paddingRight="2pt">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity name"
            android:id="@+id/name" android:layout_gravity="center_vertical|left"
            android:textSize="8pt" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity description"
            android:id="@+id/description" android:layout_gravity="left|center_vertical" android:minLines="2"
            android:textSize="6pt"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:id="@+id/textView1" android:layout_gravity="left|center_vertical" android:paddingRight="5pt"
                android:textSize="6pt" android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0 h. 0 min. 0 s."
                android:id="@+id/duration" android:textSize="6pt"/>
    </LinearLayout>
</LinearLayout>