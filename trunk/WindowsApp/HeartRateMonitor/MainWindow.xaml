<Window x:Class="HeartRateMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="509.44">
    <Grid Margin="0,0,2,0">
        <Label Content="Connected dongle:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label x:Name="dongleName" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="128,10,0,0" Width="271"/>
        <Button Content="Discover" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="45,41,0,0" Click="DiscoverButtonPressed"/>
        <ListBox x:Name="deviceList" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="274" Margin="125,41,0,0" SourceUpdated="deviceList_SourceUpdated"/>
        <Button Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="45,68,0,0" Click="StopDiscoverButtonPressed"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="45,146,0,0" Click="ConnectButtonPressed"/>
        <Button Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="404,14,0,0" Click="OpenPortButtonClick"/>
        <Label x:Name="connectedSensor" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,146,0,0" Width="274"/>
        <Button x:Name="disconnectButton" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="404,146,0,0" Click="DisconnectButtonPressed"/>
        <Label x:Name="heartRate" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,213,0,0" FontSize="36" Width="75"/>
        <Label Content="bpm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,229,0,0" FontSize="24"/>

    </Grid>
</Window>
