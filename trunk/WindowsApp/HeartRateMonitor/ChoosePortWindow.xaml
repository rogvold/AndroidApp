<Window x:Class="HeartRateMonitor.ChoosePortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChoosePortWindow" Height="127" Width="257">
    <Grid>
        <Label Content="Available ports:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox x:Name="portsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="119,10,0,0"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,65,0,0" Click="CancelButtonClick"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="164,65,0,0" Click="OkButtonClick"/>

    </Grid>
</Window>
